{
  "name": "root",
  "private": true,
  "devDependencies": {
    "husky": "^1.1.3",
    "lerna": "^3.4.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,yaml,yml}": [
      "npm run prettier",
      "git add"
    ]
  },
  "scripts": {
    "prettier": "prettier --write --config .prettierrc \"**/*.{js,jsx,ts,tsx,json,css,scss,md,yaml,yml}\""
  }
}
